<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user_notification_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/unchecked_item_user_notification_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/messageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maydon band qilish uchun so’rovingiz maydon egasiga yuborildi. So’rovingiz qabul qilinishi yoki rad etilishi bilanoq sizga bildirishnoma keladi. So’rovingiz qabul qilinganda maydon “Jadval” bo’limida paydo bo’ladi."
        android:textColor="#0A0A0A" />

    <TextView
        android:id="@+id/messageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="17.04.2022 • 16:04"
        android:textColor="#0A0A0A" />
</LinearLayout>