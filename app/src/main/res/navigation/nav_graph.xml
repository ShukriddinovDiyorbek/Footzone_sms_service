<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.footzone.footzone.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_pitchDetailFragment"
            app:destination="@id/pitchDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/tableFragment"
        android:name="com.footzone.footzone.ui.fragments.TableFragment"
        android:label="fragment_table"
        tools:layout="@layout/fragment_table" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.footzone.footzone.ui.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/pitchDetailFragment"
        android:name="com.footzone.footzone.ui.fragments.PitchDetailFragment"
        android:label="fragment_pitch_detail"
        tools:layout="@layout/fragment_pitch_detail" />
</navigation>